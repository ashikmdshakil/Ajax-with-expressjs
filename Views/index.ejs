        <script  src = "index.js"></script>  
        </script>
    </head>
    <body>
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">


                    <!--student info save-->
                    <div class="container-fluid">
                    <div class="row">
                        <div class = "col-4">
                        </div>
                        <div class = "col-4">
                            <form action ="/save" method="POST">
                                <div>
                                    <label for="formControlRange">Student Name</label>
                                    <input type="text" name = "name" id = "name" class="form-control" placeholder="Md Shakil" required>
                                </div>
                                <div>
                                    <label for="formControlRange">Student Id</label>
                                    <input type="text" name = "id" id = "id" class="form-control" placeholder="345-45-4534" required>
                                </div>
                                <div>
                                    <label for="formControlRange">Student Department</label>
                                    <input type="text" name = "department" id = "department" class="form-control" placeholder="Software Engineering" required>
                                </div>
    
                                    <input type="submit" id = "save" style="position: relative; left: 100px; top: 20px;"  class="btn btn-secondary" value="Save">
                                
                            </form>
                        </div>
                        <div class = "col-4">
                        </div>
                    </div>
                    </div>

                    <!--Students table-->

                    <div class = "row" style="position: relative; top: 50px">
                        <div class = "col-2">

                        </div>
                        <div class = "col-8">
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Id</th>
                                    <th scope="col">Department</th>
                                  </tr>
                                </thead>
                                <tbody id = "createRow">
                                  
                                </tbody>
                              </table>
                        </div>
                        <div class = "col-2">

                        </div>
                    </div>
                    
                        
                </div>
            </div>
        </div>
        
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
